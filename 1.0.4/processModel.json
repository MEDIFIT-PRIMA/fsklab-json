{
    "$id": "https://medifit-prima.github.io/fsklab-json/1.0.4/processModel.json",
    "type": "object",
    "properties": {
        "dataBackground": {
            "$ref": "modelDataBackground.json"
        },
        "modelType": {
            "pattern": "^processModel$",
            "type": "string"
        },
        "generalInformation": {
            "$ref": "genericModelGeneralInformation.json"
        },
        "modelMath": {
            "$ref": "modelMath.json"
        },
        "scope": {
            "type": "object",
            "properties": {
                "spatialInformation": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "product": {
                    "type": "array",
                    "items": {
                        "$ref": "product.json"
                    }
                },
                "generalComment": {
                    "type": "string"
                },
                "hazard": {
                    "type": "array",
                    "items": {
                        "$ref": "hazard.json"
                    }
                },
                "temporalInformation": {
                    "type": "string"
                }
            },
            "required": [
                "product",
                "hazard"
            ]
        }
    }
}